@external propSource highlighting from "./highlight.js"

@top Program { statement* }

@skip { LineComment | BlockComment }

statement {
	VariableName
}

VariableName { properVariable }

@external tokens matchProperVariable from "./tokens" { properVariable }

@tokens {
	LineComment { "#" ![\n]* }
	BlockComment {
		"(" ![)]* ")"
		|
		"[" ![\]]* "]"
		|
		"{" ![}]* "}"
	}
	_ { $[ \t] }
}

@detectDelim
